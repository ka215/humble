{
  "name": "sloth-css",
  "description": "Mobile-first Micro CSS Framework that has reduced styling coding costs to a minimum with non-BEM, and through more simplified naming conventions than OOCSS.",
  "version": "1.4.0",
  "version_short": "1.0",
  "keywords": [
    "css",
    "sass",
    "postcss",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "homepage": "https://ka2.org/sloth/",
  "author": {
    "name": "ka2 (Katsuhiko Maeno)",
    "email": "ka2@ka2.org",
    "url": "https://ka2.org"
  },
  "scripts": {
    "demo": "postcss docs/assets/sloth.index.scss -o docs/assets/sloth.index.min.css",
    "build": "postcss src/sloth.css -o dist/sloth.min.css",
    "watch": "postcss src/sloth.css -o dist/sloth.min.css -w --map"
  },
  "style": "src/sloth.css",
  "sass": "src/index.scss",
  "main": "src/sloth-extension.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ka215/sloth.git"
  },
  "bugs": {
    "url": "https://github.com/ka215/sloth/issues"
  },
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.2.1",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.6",
    "css-declaration-sorter": "^4.0.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.0",
    "gulp-eslint": "^6.0.0",
    "gulp-gzip": "^1.4.2",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "postcss-cli": "^6.1.2",
    "postcss-reporter": "^6.0.1",
    "precss": "^4.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.39.2",
    "webpack-cli": "^3.3.6",
    "webpack-stream": "^5.2.1"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist/**/*.{css,js,map,gz}",
    "src/**/*.{scss,css,js}"
  ]
}
